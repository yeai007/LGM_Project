<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray2"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top_comright" />

    <RelativeLayout
        android:id="@+id/rel_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/top"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="用户昵称" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_nickname"
            android:background="@drawable/bg_edittext"
            android:clickable="false"
            android:gravity="center_vertical" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_nickname"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_field"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="关注领域" />

        <Button
            android:id="@+id/btn_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_field"
            android:background="@drawable/bg_edittext"
            android:gravity="center_vertical"
            android:text="点击添加领域"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_nickname"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left|center"
            android:minHeight="50dp"
            android:text="简介" />
    </RelativeLayout>
</LinearLayout>