<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_this_new"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/top"

    android:background="@color/white">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:text="用户"
        android:textColor="#8DB6CD"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_huifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/user_name"
        android:gravity="left|center_vertical"
        android:text="回复"
        android:textColor="#333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_to_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_huifu"
        android:gravity="left|center_vertical"
        android:text="用户"
        android:textColor="#8DB6CD"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/send_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_to_user_name"
        android:gravity="right|center_vertical"
        android:text="发表时间"
        android:textColor="#cbcbcb"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="未填写信息内容"
            android:textColor="@color/text_title_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_huifu"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/comment_img" />
    </RelativeLayout>
</RelativeLayout>