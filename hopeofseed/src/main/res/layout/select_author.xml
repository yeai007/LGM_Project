<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top_comright" />

    <LinearLayout
        android:id="@+id/rel_variety_class_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/top"
        android:padding="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="政务咨询" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="业务审批" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_variety_class_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_variety_class_1"
        android:padding="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="维权投诉" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="农技推广" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_variety_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_variety_class_2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/one"
                style="@style/main_tab"
                android:gravity="center"
                android:text="列表" />

            <RadioButton
                android:id="@+id/two"
                style="@style/main_tab"
                android:gravity="center"
                android:text="地图" />

        </RadioGroup>
    </LinearLayout>

    <com.hopeofseed.hopeofseed.ui.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_variety_content" />
</RelativeLayout>