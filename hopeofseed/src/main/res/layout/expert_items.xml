<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/item_view"
>

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rel_img_user_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <com.hopeofseed.hopeofseed.ui.CircleImageView
                android:id="@+id/img_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/header_expert_default" />

            <ImageView
                android:id="@+id/img_corner"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/corner_expert" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rel_img_user_avatar"
            android:gravity="left|center_vertical"
            android:text="【专家】"
            android:textColor="@color/text_title_color" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_user_role"
            android:gravity="left|center_vertical"
            android:text="用户"
            android:textColor="@color/text_title_color" />

        <TextView
            android:id="@+id/tv_pol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rel_img_user_avatar"
            android:gravity="left|center_vertical"
            android:text="领域："
            android:textColor="@color/text_content_color" />

        <TextView
            android:id="@+id/tv_danwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pol"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/rel_img_user_avatar"
            android:gravity="left|center_vertical"
            android:text="单位："
            android:textColor="@color/text_content_color" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_danwei"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/rel_img_user_avatar"
            android:gravity="left|center_vertical"
            android:text="地址："
            android:textColor="@color/text_content_color" />

    </RelativeLayout>
</RelativeLayout>
