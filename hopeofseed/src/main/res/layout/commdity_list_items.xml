<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.hopeofseed.hopeofseed.curView.SquareImageView
            android:id="@+id/commodity_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:src="@drawable/no_have_img" />

        <TextView
            android:id="@+id/commodity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commodity_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="1111"
            android:textColor="@color/text_content_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/commodity_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commodity_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="ï¿¥2222"
            android:textColor="@color/red"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
